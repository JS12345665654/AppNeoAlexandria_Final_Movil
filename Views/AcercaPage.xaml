<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prueba.Views.AcercaPage"
             xmlns:models="clr-namespace:Prueba.Models"
             Title="Acerca del programador"
             Background="#00643b">

    <VerticalStackLayout Spacing="10" Padding="20">

        <Label
            Text="Datos del programador"
            TextColor="White"
            FontSize="23"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Margin="0,10" />

        <Image
            Aspect="AspectFill"
            HorizontalOptions="Center"
            HeightRequest="200"
            WidthRequest="200"
            Source="foto.jpg" />

        <Label
           Text="GitHub:"
           TextColor="White"
           FontSize="19"
           HorizontalOptions="Start" />

        <Label
           Text="https://github.com/JS12345665654"
           TextColor="LightBlue"
           TextDecorations="Underline"
           FontSize="17"
           HorizontalOptions="Start" />

        <Label
           Text="LinkedIn:"
           TextColor="White"
           FontSize="19"
           HorizontalOptions="Start" />

        <Label
           Text="https://www.linkedin.com/in/joaqu%C3%ADn-sober%C3%B3n-5797b2180/"
           TextColor="LightBlue"
           TextDecorations="Underline"
           FontSize="17"
           HorizontalOptions="Start" />

        <Image Source="sobreelprogramador.png"
               HeightRequest="200"
               HorizontalOptions="Center"
               Margin="0,20,0,10"/>
    </VerticalStackLayout>
</ContentPage>